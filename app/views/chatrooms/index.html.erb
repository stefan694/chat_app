<p id="notice"><%= notice %></p>

<h1>Chatrooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr>
        <td><%= chatroom.name %></td>
        <td><%= link_to 'Edit', edit_chatroom_path(chatroom), class:'btn btn-info' %></td>
        <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        <% if chatroom.users.include?(current_user) %>
          <td><%= link_to 'Leave chatroom', chatroom_chatroom_users_path(chatroom), method: :delete, class:'btn btn-warning' %></td>
        <% else %>
          <td><%= link_to 'Join chatroom',  chatroom_chatroom_users_path(chatroom), method: :post, class:'btn btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chatroom', new_chatroom_path, class:'btn btn-primary' %>
